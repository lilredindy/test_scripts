<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="WordpressSuite">
  <test name="ChromeTests">
 <parameter name="browser" value="chrome" />
    <classes>
       <class name="TestngWordpressExample"/>
          <methods>
          	<include name="launchSite" />
          	<include name="loginAsAdmin" />
          	<include name="navigateNewPost" />
          	<include name="writeBlogPost" />
          	<include name="publishBlogPost" />
          	<include name="verifyBlogPost" />
        </methods>
    </classes>
  </test>
    <test name="FirefoxTests">
 <parameter name="browser" value="firefox" />
    <classes>
       <class name="TestngWordpressExample"/>
          <methods>
            <include name="launchSite" />
            <include name="loginAsAdmin" />
            <include name="navigateNewPost" />
            <include name="writeBlogPost" />
            <include name="publishBlogPost" />
            <include name="verifyBlogPost" />
        </methods>
    </classes>
  </test>
  <test name="dafdTests">
 <parameter name="browser" value="fadfd" />
    <classes>
       <class name="TestngWordpressExample"/>
    </classes>
  </test>
</suite>